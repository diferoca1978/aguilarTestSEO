---
import "../styles/global.css";
import Navigation from "../components/global/Navigation.astro";
import Footer from "@/components/global/Footer.astro";
import { ORGANIZATION_SCHEMA, WEBSITE_SCHEMA } from "@/config/seoConfig";
interface Props {
  title: string;
}
const { title } = Astro.props;
---

<!doctype html>
<html lang="es_CO" class="scrollbar-hide overflow-x-hidden">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
    <link rel="icon" type="image/x-icon" href="/favicons/favicon.ico" />
    <link
      rel="apple-touch-icon"
      sizes="180x180"
      href="/favicons/apple-touch-icon.png"
    />
    <link
      rel="icon"
      type="image/png"
      sizes="32x32"
      href="/favicons/favicon-32x32.png"
    />
    <link
      rel="icon"
      type="image/png"
      sizes="16x16"
      href="/favicons/favicon-16x16.png"
    />
    <link rel="sitemap" href="/sitemap-index.xml" />

    <!-- SEO metadata -->
     <script type="application/ld+json">
      {JSON.stringify(ORGANIZATION_SCHEMA)}
    </script>
    <script type="application/ld+json">
      {JSON.stringify(WEBSITE_SCHEMA)}
    </script>


    <!-- SEO component will be injected here by pages -->
    <slot name="head" />
  </head>
  <body>
    <Navigation />
    <main class="md:pt-[130px]">
        <div class="relative">
            <div class="absolute inset-0 z-0">
  <svg width="100%" height="100%" xmlns="http://www.w3.org/2000/svg">
    <defs>
      <pattern id="lines-diagonal" width="20" height="20" patternUnits="userSpaceOnUse" patternTransform="rotate(45)">
        <line x1="0" y1="0" x2="0" y2="20"
              stroke="#64748b" stroke-width="1" opacity="0.25"/>
      </pattern>
    </defs>
    <rect width="100%" height="100%" fill="url(#lines-diagonal)"/>
  </svg>
</div>
            <div class="relative z-10 p-8">
                <slot />
            </div>
        </div>
    </main>
  </body>
</html>

<style>

  /* CSS rules for the page scrollbar */
  .scrollbar-hide::-webkit-scrollbar {
    display: none;
  }

  .scrollbar-hide {
    -ms-overflow-style: none;
    scrollbar-width: none;
  }
body {
    height: 100%;
    padding: 0;
    margin: 0;
  }
</style>
