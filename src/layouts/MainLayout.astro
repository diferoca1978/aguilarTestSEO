---
import "../styles/global.css";
import Navigation from "../components/global/Navigation.astro";
import Footer from "@/components/global/Footer.astro";
import { ORGANIZATION_SCHEMA, WEBSITE_SCHEMA } from "@/config/seoConfig";
interface Props {
  title: string;
}
const { title } = Astro.props;
---

<!doctype html>
<html lang="es_CO" class="scrollbar-hide overflow-x-hidden">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
    <link rel="icon" type="image/x-icon" href="/favicons/favicon.ico" />
    <link
      rel="apple-touch-icon"
      sizes="180x180"
      href="/favicons/apple-touch-icon.png"
    />
    <link
      rel="icon"
      type="image/png"
      sizes="32x32"
      href="/favicons/favicon-32x32.png"
    />
    <link
      rel="icon"
      type="image/png"
      sizes="16x16"
      href="/favicons/favicon-16x16.png"
    />
    <link rel="sitemap" href="/sitemap-index.xml" />

    <!-- SEO metadata -->
     <script type="application/ld+json">
      {JSON.stringify(ORGANIZATION_SCHEMA)}
    </script>
    <script type="application/ld+json">
      {JSON.stringify(WEBSITE_SCHEMA)}
    </script>


    <!-- SEO component will be injected here by pages -->
    <slot name="head" />
  </head>
  <body>
    <Navigation />
    <main class="md:pt-[130px]">
      <slot />
    </main>
    <Footer />
  </body>
</html>

<style>

  /* CSS rules for the page scrollbar */
  .scrollbar-hide::-webkit-scrollbar {
    display: none;
  }

  .scrollbar-hide {
    -ms-overflow-style: none;
    scrollbar-width: none;
  }
body {
    height: 100%;
    padding: 0;
    margin: 0;
  }
</style>
