---
import { SEO } from "astro-seo";
import { generatePageSEO } from "@/config/seoConfig";
import MainLayout from "@/layouts/MainLayout.astro";
import AboutUsSection from "@/components/section/perPage/AboutUsSection.astro";
import WhyChooseUsSection from "@/components/section/perPage/WhyChooseUs.astro";
import CtaBanner from "@/components/global/CtaBanner.astro";

const seoProps = generatePageSEO({
  title: "Quiénes somos",
  description:
    "Somos abogados especializados en seguros con mas de 15 años de experiencia.",
  path: "/aboutUs",
  image: "/assets/images/og-image.png",
});
---

<MainLayout title="Quiénes somos">
  <Fragment slot="head">
    <SEO {...seoProps} />
  </Fragment>
  <AboutUsSection />
  <WhyChooseUsSection />
  <CtaBanner
    title="Queremos conocer su caso"
    subtitle="Consulte sin costo"
    ctaText="Agende una llamada"
    href="/contacto"
  />
</MainLayout>
