---
import LogoSvg from "@/assets/images/logoblackletters.svg";
import MobileMenuSvg from "@/assets/images/mobilemenu.svg";
import MobileMenuCloseSvg from "@/assets/images/mobilemenuclose.svg";

const currentPath = Astro.url.pathname;
---

<!-- Logo -->
<header
  class="fixed top-0 left-0 right-0 bg-softWhite-50 z-50 w-full flex flex-wrap shadow-lg md:flex-nonwrap main-header"
>
  <nav class="w-full mx-auto md:max-w-7xl nav-bar">
    <div class="flex justify-between items-center px-5">
      <!-- Logo -->
      <div>
        <a href="/">
          <LogoSvg width={250} height={130} class="logo" />
          <span class="sr-only">Logo</span>
        </a>
      </div>
      <!-- Mobile menu button -->
      <div>
        <button
          type="button"
          class="relative items-center justify-center p-2 focus:outline-0 md:hidden open-mobile-menu"
        >
          <span class="sr-only">Open mobile menu</span>
          <!-- Open icon -->
          <MobileMenuSvg id="open-icon" width={32} height={32} />

          <!-- Close icon -->
          <MobileMenuCloseSvg
            class="hidden"
            id="close-icon"
            width={28}
            height={28}
          />
        </button>
        <!-- Desktop menu -->
        <div class="hidden md:block">
          <div class="flex space-x-4 items-center">
            <a
              href="/quienesSomos"
              class="flex space-x-1 text-deepdark-900 font-semibold nav-link"
              ><span>¿Quiénes</span> <span>Somos?</span></a
            >
            <!-- Servicios with click dropdown -->
            <div class="relative">
              <a
                href="#"
                id="servicios-toggle"
                class="flex items-center text-deepdark-900 font-semibold nav-link cursor-pointer"
              >
                <span>Servicios</span>
                <!-- Dropdown icon -->
                <svg
                  class="w-4 h-4 ml-1"
                  xmlns="http://www.w3.org/2000/svg"
                  fill="none"
                  viewBox="0 0 24 24"
                  stroke="currentColor"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M19 9l-7 7-7-7"></path>
                </svg>
              </a>
              <div
                id="servicios-dropdown"
                class="absolute left-0 top-full mt-1 w-48 bg-softWhite-50 z-10 rounded-xl shadow-lg hidden"
              >
                <a
                  href="/serviciosPersonas"
                  class="block px-4 py-2 text-deepdark-900 hover:bg-gold-100 hover:rounded-xl transition"
                  >Personas</a
                >
                <a
                  href="/serviciosEmpresas"
                  class="block px-4 py-2 text-deepdark-900 hover:bg-gold-100 hover:rounded-xl transition"
                  >Empresas</a
                >
              </div>
            </div>
            <a
              href="/casosDeExito"
              class="text-deepdark-900 font-semibold nav-link"
              >Casos de <span>Éxito</span></a
            >
            <a href="/blog" class="text-deepdark-900 font-semibold nav-link"
              >Blog</a
            >
            <button
              type="button"
              class="text-softWhite-50 bg-gold-400 font-semibold rounded-xl px-4 py-2 hover:bg-softWhite-50 hover:text-deepdark-900 hover:border hover:border-deepdark-900 transition duration-300"
            >
              <a href="/contacto">Contacto</a></button
            >
          </div>
        </div>
      </div>
      <!-- Mobile menu -->
      <div
        class="mobile-menu md:hidden absolute top-[130px] bg-softWhite-50 right-0 px-2 rounded-b-lg shadow-lg"
      >
        <div
          class="flex flex-col justify-center items-center py-5 space-y-4 mt-2"
        >
          <a
            href="/quienesSomos"
            class="text-deepdark-900 font-semibold nav-link"
            >¿Quiénes <span>Somos?</span></a
          >
          <!-- Servicios mobile indent with toggle -->
          <div class="flex flex-col items-end">
            <a
              href="/serviciosPersonas"
              id="mobile-servicios-toggle"
              class="flex items-center text-deepdark-900 font-semibold nav-link cursor-pointer"
            >
              <span>Servicios</span>
              <svg
                class="w-4 h-4 ml-1"
                xmlns="http://www.w3.org/2000/svg"
                fill="none"
                viewBox="0 0 24 24"
                stroke="currentColor"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M19 9l-7 7-7-7"></path>
              </svg>
            </a>
            <div
              id="mobile-servicios-dropdown"
              class="items-end ml-4 mt-1 space-y-2 hidden"
            >
              <a
                href="/serviciosPersonas"
                class="text-deepdark-950 nav-link block">Personas</a
              >
              <a
                href="/serviciosEmpresas"
                class="text-deepdark-950 nav-link block">Empresas</a
              >
            </div>
          </div>
          <a
            href="/casosDeExito"
            class="text-deepdark-900 font-semibold nav-link"
            >Casos de <span>Éxito</span></a
          >
          <a href="/blog" class="text-deepdark-900 font-semibold nav-link"
            >Blog</a
          >
          <a href="/contacto" class="text-deepdark-900 font-semibold"
            >Contacto</a
          >
        </div>
      </div>
    </div>
  </nav>
</header>
<style>
  .mobile-menu {
    max-height: 0;
    overflow: hidden;
    width: 0;
    transition:
      max-height 0.5s ease-out,
      width 0.5s ease-out;
  }
  .mobile-menu.open {
    max-height: 1000px;
    width: 100%;
    transition:
      max-height 0.8s ease-in,
      width 0.5s ease-in;
  }
</style>

<script>
  const currentPath = window.location.pathname;

  function highlightActiveLink() {
    const links = document.querySelectorAll(".nav-link");
    links.forEach((link) => {
      const href = link.getAttribute("href");
      if (href === currentPath) {
        link.classList.add("text-gold-500");
      } else {
        link.classList.remove("text-gold-500");
      }
    });
  }

  // Run after DOM is loaded
  document.addEventListener("DOMContentLoaded", highlightActiveLink);
  // Also run on dynamic navigation if needed
  document.addEventListener("astro:page-load", highlightActiveLink);
</script>

<script>
  // Mobile menu toggle
  const btn = document.querySelector(
    "button.open-mobile-menu"
  ) as HTMLButtonElement;
  const menu = document.querySelector(".mobile-menu") as HTMLDivElement;
  const openIcon = document.querySelector("#open-icon") as HTMLElement;
  const closeIcon = document.querySelector("#close-icon") as HTMLElement;
  btn.addEventListener("click", () => {
    menu.classList.toggle("open");
    openIcon.classList.toggle("hidden");
    closeIcon.classList.toggle("hidden");
  });

  // Servicios desktop dropdown click
  const serviciosToggle = document.querySelector(
    "#servicios-toggle"
  ) as HTMLButtonElement;
  const serviciosDropdown = document.querySelector(
    "#servicios-dropdown"
  ) as HTMLDivElement;
  serviciosToggle.addEventListener("click", (e) => {
    e.preventDefault();
    serviciosDropdown.classList.toggle("hidden");
  });
  serviciosDropdown.addEventListener("mouseleave", (e) => {
    e.preventDefault();
    serviciosDropdown.classList.add("hidden");
  });

  // Servicios mobile dropdown click
  const mobileServiciosToggle = document.querySelector(
    "#mobile-servicios-toggle"
  ) as HTMLButtonElement;
  const mobileServiciosDropdown = document.querySelector(
    "#mobile-servicios-dropdown"
  ) as HTMLDivElement;
  mobileServiciosToggle.addEventListener("click", (e) => {
    e.preventDefault();
    mobileServiciosDropdown.classList.toggle("hidden");
  });
</script>

