---
interface Props {
    title: string;
    subtitle: string;
    ctaText: string;
}

const { title, subtitle, ctaText } = Astro.props;
---

<div
    class="flex flex-col w-full items-center p-5 gap-2 mt-16 py-10 bg-deepdark-950"
>
    <h2
        class="text-softWhite-50 mt-3 text-[min(10vw,36px)] font-semibold text-center"
    >
        {title}
    </h2>

    <div>
        <a
            href="/contact"
            class="inline-block px-4 py-2 rounded-xl bg-gradient-to-r from-gold-400 to-gold-500
      hover:from-gold-500 hover:to-gold-400 focus:outline-1
      text-softWhite-50 font-semibold text-lg
      shadow-md transition duration-400 ease-in-out
      transform hover:scale-105"
            >{ctaText}</a
        >
    </div>

    <div class="flex items-center gap-2">
        <p class="text-softWhite-50 text-[min(4vw,16px)]">{subtitle}</p>
    </div>
</div>
