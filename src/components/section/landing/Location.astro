---
import Mapa_Colombia from "@/assets/images/Mapa_Colombia.svg";
import InfoSvg from "@/assets/icons/info.svg";
import VideoChatSvg from "@/assets/icons/video_chat.svg";
import { Image } from "astro:assets";
---

<section class="max-w-7xl mx-auto my-14">
    <div class="flex flex-col items-center justify-around md:flex-row p-5">
        <Image
            src={Mapa_Colombia}
            width={380}
            height={350}
            alt="Colombia"
            class="hidden md:block"
        />
        <div class="flex flex-col items-center justify-center">
            <!-- Content -->
            <div class="flex flex-col items-center">
                <h1
                    class="text-[min(10vw,52px)] font-bold text-deepdark-900 leading-tight tracking-tight"
                >
                    <span class="block">Atendemos en</span>
                    <span class="block">todo el país</span>
                </h1>

                <h2
                    class="text-[min(10vw,24px)] font-semibold text-deepdark-900 leading-tight tracking-tight"
                >
                    Representación nacional
                </h2>
                <Image
                    src={Mapa_Colombia}
                    width={150}
                    height={150}
                    alt="Colombia"
                    class="block md:hidden mt-5"
                />
            </div>
            <!-- Icons -->
            <div class="flex flex-col md:flex-row md:justify-around gap-5 mt-5">
                <div class="flex flex-col items-center">
                    <VideoChatSvg width={70} height={70} />
                    <p
                        class="flex flex-col text-[min(6vw,20px)] text-deepdark-900 text-center"
                    >
                        <span class="block">Atención remota</span>
                        <span class="block">o hibrida</span>
                    </p>
                </div>
                <div class="flex flex-col items-center">
                    <InfoSvg width={70} height={70} />
                    <p
                        class="flex flex-col text-[min(6vw,20px)] text-deepdark-900 text-center"
                    >
                        <span class="block">Lo mantenemos</span>
                        <span class="block">informado</span>
                    </p>
                </div>
            </div>
            <!-- CTA Button -->
            <div class="mt-8 text-center">
                <a
                    href="/contact"
                    class="inline-block px-4 py-2 rounded-xl bg-gradient-to-r from-gold-400 to-gold-500
                hover:from-gold-500 hover:to-gold-400 focus:outline-1
                text-softWhite-50 font-semibold text-lg
                shadow-md transition duration-400 ease-in-out
                transform hover:scale-105"
                >
                    Agende su consulta desde cualquier lugar
                </a>
            </div>
        </div>
    </div>
</section>
